	int *childs;
	/*aletoriezar*/

	Graph *G;
	G = read(argv[1]);
	childs = malloc(G->V*sizeof(int));

	childNumber(G, root, childs, root);
	for(i = 0; i<G->V; i++)
	{
		printf("%d - %d\n", i, childs[i]);
	}
	if(G->V == m)
		mEqualsN(m);

	return 0;
}



void mEqualsN(int m)
{
	int i;
	for(i = 0; i<m; i++)
	{
		printf("%d ", i);
	}
	printf("\n0\n");
}

