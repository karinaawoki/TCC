int childNumber(Graph *G, int root, int *childs, int parent)
{
	Vertex *i;
	int sum = 0;
	for (i = G->adj[root]; i!= NULL; i = i->next)
	{
		if (i->vertex != parent)
		{
			sum += childNumber(G, i->vertex, childs, root);
		}
	}
	childs[root] = ++sum;

	return sum;
}